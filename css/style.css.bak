:root {
    --bg-color: #0c0c0e;
    --panel-color: #1a1a1f;
    --primary-color: #800020;
    /* Bordeaux */
    --primary-light: #a30029;
    --accent-color: #ff4d6d;
    --text-color: #f1f1f1;
    --text-muted: #a0a0a5;
    --glass-bg: rgba(255, 255, 255, 0.05);
    --sidebar-width: 260px;
    --border-radius: 12px;
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Outfit', sans-serif;
    background-color: var(--bg-color);
    color: var(--text-color);
    display: flex;
    height: 100vh;
    overflow: hidden;
}

/* Sidebar Styling */
.sidebar {
    width: var(--sidebar-width);
    background-color: var(--panel-color);
    display: flex;
    flex-direction: column;
    padding: 24px;
    border-right: 1px solid rgba(255, 255, 255, 0.05);
}

.sidebar-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 40px;
}

.main-logo {
    width: 45px;
    height: 45px;
    object-fit: contain;
}

.sidebar-header h2 {
    font-size: 1.2rem;
    font-weight: 800;
    letter-spacing: 1px;
}

.sidebar-header h2 span {
    color: var(--primary-color);
}

.nav-links {
    list-style: none;
    flex-grow: 1;
}

.nav-links li {
    padding: 14px 16px;
    margin-bottom: 8px;
    border-radius: var(--border-radius);
    display: flex;
    align-items: center;
    gap: 12px;
    cursor: pointer;
    color: var(--text-muted);
    transition: var(--transition);
}

.nav-links li i {
    font-size: 1.1rem;
    width: 20px;
}

.nav-links li:hover {
    background: var(--glass-bg);
    color: white;
}

.nav-links li.active {
    background-color: var(--primary-color);
    color: white;
    box-shadow: 0 4px 15px rgba(128, 0, 32, 0.3);
}

.sidebar-footer {
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 0.8rem;
    color: var(--text-muted);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.logout-btn {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-muted);
    padding: 8px;
    border-radius: 8px;
    cursor: pointer;
    font-family: inherit;
    font-size: 0.85rem;
    transition: var(--transition);
}

.logout-btn:hover {
    background: rgba(255, 0, 0, 0.1);
    color: #ff4d6d;
    border-color: #ff4d6d;
}

/* Main Content Area */
.content-area {
    flex-grow: 1;
    height: 100vh;
    overflow-y: auto;
    padding: 30px;
    position: relative;
    background: radial-gradient(circle at 50% -20%, #1a1a1f 0%, #0c0c0e 70%);
}

.screen {
    display: none;
    animation: fadeIn 0.4s ease-out;
}

.screen.active {
    display: block;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

header {
    margin-bottom: 30px;
}

header h1 {
    font-size: 2rem;
    font-weight: 700;
}

header p {
    color: var(--text-muted);
    margin-top: 4px;
}

/* Home Screen Cards */
.quick-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
}

.stat-card {
    background: var(--panel-color);
    padding: 24px;
    border-radius: var(--border-radius);
    display: flex;
    align-items: center;
    gap: 20px;
    border: 1px solid rgba(255, 255, 255, 0.03);
    transition: var(--transition);
}

.stat-card:hover {
    transform: translateY(-5px);
    border-color: rgba(128, 0, 32, 0.4);
}

.stat-card i {
    font-size: 2rem;
    color: var(--primary-color);
}

.stat-info h3 {
    font-size: 1.5rem;
}

.stat-info p {
    color: var(--text-muted);
    font-size: 0.9rem;
}

.action-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 15px;
    margin-top: 20px;
}

.action-btn {
    background: var(--glass-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    padding: 30px 20px;
    border-radius: var(--border-radius);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    cursor: pointer;
    font-size: 1rem;
    font-family: inherit;
    transition: var(--transition);
}

.action-btn i {
    font-size: 1.8rem;
}

.action-btn:hover {
    background: var(--primary-color);
    border-color: var(--primary-color);
    transform: scale(1.03);
}

/* Tactic Board Layout */
.tactic-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.tactic-inputs {
    display: flex;
    gap: 10px;
    margin-top: 10px;
}

.tactic-inputs input {
    background: var(--panel-color);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    padding: 8px 12px;
    border-radius: 6px;
    font-family: inherit;
}

.tactic-layout {
    display: grid;
    grid-template-columns: 240px 1fr 240px;
    gap: 20px;
    height: calc(100vh - 180px);
}

.players-panel,
.options-panel {
    background: var(--panel-color);
    border-radius: var(--border-radius);
    padding: 16px;
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.player-pool {
    flex-grow: 1;
    overflow-y: auto;
    margin: 15px 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.player-item {
    background: #4a0012;
    /* Dark Bordeaux */
    padding: 10px 14px;
    border-radius: 8px;
    cursor: grab;
    font-weight: 600;
    font-size: 0.9rem;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.player-item:active {
    cursor: grabbing;
    opacity: 0.8;
}

.field-container {
    background-color: #081a08;
    border-radius: var(--border-radius);
    position: relative;
    overflow: hidden;
    box-shadow: inset 0 0 50px rgba(0, 0, 0, 0.5);
    border: 4px solid #1a1a1f;
}

canvas {
    width: 100%;
    height: 100%;
    cursor: crosshair;
}

/* Tactic Tools */
.tool-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 8px;
    margin-top: 10px;
}

.tool-btn {
    background: #2a2a2f;
    border: none;
    color: white;
    padding: 10px;
    border-radius: 6px;
    cursor: pointer;
    transition: var(--transition);
}

.tool-btn.active {
    background: var(--primary-color);
}

.btn {
    padding: 10px 20px;
    border-radius: 8px;
    border: none;
    font-weight: 600;
    cursor: pointer;
    font-family: inherit;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: var(--transition);
}

.btn-primary {
    background: var(--primary-color);
    color: white;
}

.btn-primary:hover {
    background: var(--primary-light);
}

.btn-secondary {
    background: #2a2a2f;
    color: white;
}

textarea {
    width: 100%;
    height: 120px;
    background: #0c0c0e;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    padding: 10px;
    border-radius: 8px;
    resize: none;
    margin-top: 10px;
    font-family: inherit;
}

/* Generic Utilities */
h3 {
    font-size: 1rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Login Screen Styles */
.login-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, #1a1a2e 0%, #0c0c0e 100%);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: var(--transition);
}

.login-overlay.active {
    visibility: visible;
    opacity: 1;
}

.login-card {
    background: rgba(26, 26, 31, 0.8);
    backdrop-filter: blur(20px);
    padding: 40px;
    border-radius: 24px;
    width: 100%;
    max-width: 400px;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes slideUp {
    from {
        transform: translateY(30px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.login-logo {
    width: 80px;
    margin-bottom: 20px;
}

.login-card h1 {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 8px;
}

.login-card h1 span {
    color: var(--primary-color);
}

.login-card p {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin-bottom: 30px;
}

.input-group {
    position: relative;
    margin-bottom: 20px;
}

.input-group i {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-muted);
    font-size: 1.1rem;
}

.input-group input {
    width: 100%;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    padding: 15px 15px 15px 45px;
    border-radius: 12px;
    font-family: inherit;
    font-size: 1rem;
    transition: var(--transition);
}

.input-group input:focus {
    border-color: var(--primary-color);
    outline: none;
    background: rgba(0, 0, 0, 0.3);
}

.btn-block {
    width: 100%;
    justify-content: center;
    padding: 15px;
    font-size: 1.1rem;
    margin-top: 10px;
}

.login-footer {
    margin-top: 30px;
    font-size: 0.8rem !important;
    opacity: 0.7;
}